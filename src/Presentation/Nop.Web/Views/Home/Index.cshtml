                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </section><!--/slider-->
        </div>

        <div class="col-12-sm" style=" color: #696763;  margin-top: -5%; border-top: 1px solid #f5f5f5;">
            @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.HomepageBeforeCategories })
